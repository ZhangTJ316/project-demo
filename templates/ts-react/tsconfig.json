{
  /**
   * 编译选项
   */
  "compilerOptions": {
    /**
     * 目标JavaScript版本
     */
    "target": "ES2020",
    /**
     * 使用的默认库
     */
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    /**
     * 模块类型
     */
    "module": "ESNext",
    /**
     * 跳过库检查
     */
    "skipLibCheck": true,

    /* Bundler模式 */
    /**
     * 允许使用JSX
     */
    "jsx": "react-jsx",
    /**
     * 模块解析策略
     */
    "moduleResolution": "bundler",
    /**
     * 允许导入JSON
     */
    "allowImportingTsExtensions": true,
    /**
     * 解析此配置的基准目录
     */
    "resolveJsonModule": true,
    /**
     * 生成sourcemap
     */
    "isolatedModules": true,
    /**
     * 不输出文件
     */
    "noEmit": true,

    /* 严格类型检查选项 */
    /**
     * 启用所有严格类型检查选项
     */
    "strict": true,
    /**
     * 不允许有未声明的变量
     */
    "noUnusedLocals": true,
    /**
     * 不允许有未使用的参数
     */
    "noUnusedParameters": true,
    /**
     * 确保函数中的所有路径都有返回值
     */
    "noFallthroughCasesInSwitch": true,
    /**
     * 路径别名配置
     */
    "paths": {
      "@/*": ["./src/*"]
    },
    /**
     * 基础URL设置
     */
    "baseUrl": "."
  },
  /**
   * 包含的文件模式
   */
  "include": ["src"],
  /**
   * 引用项目
   */
  "references": [{ "path": "./tsconfig.node.json" }]
} 